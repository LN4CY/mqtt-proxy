rrpi.ddns.net {
        # Redirect root to subfolder
        redir / /meshmonitor/ 308
        # Ensure trailing slash
        redir /meshmonitor /meshmonitor/ 308

        handle /meshmonitor/* {
                reverse_proxy meshmonitor:3001
        }

        handle {
                # Fallback or other routes
                respond "Not Found" 404
        }

        encode gzip

        # Logging (optional)
        log {
                output file /var/log/caddy/meshmonitor.log
        }
}
